extends ./DESKTOP_templates/layout.jade
block scripts
	script(type='text/javascript', src='/js/index.js')
block links
	link(rel='stylesheet', type='text/css', href='/desktop_css/index.css')
block content
	.Mainbody(ng-controller='indexController')
		// gogle analysis
		script.
			(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
			(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
			m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
			})(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
			ga('create', 'UA-60904924-2', 'auto');
			ga('send', 'pageview');
		include ./DESKTOP_templates/top.jade
		// index start
		.body
			p#hint 水果小知識
			ul.fruitIntro
				li(ng-repeat="fruit in aryFruitIntro")
					img(ng-src="{{fruit.picUri}}")
					h1 {{fruit.name}}
					p {{fruit.info}}
					hr.verticalLine(ng-if="$index != aryFruitIntro.length-1")
		include ./DESKTOP_templates/footer.jade