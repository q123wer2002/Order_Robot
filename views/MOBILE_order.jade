extends ./MOBILE_templates/layout.jade
block scripts
	script(type='text/javascript', src='/js/order.js')
block links
	link(rel='stylesheet', type='text/css', href='/mobile_css/order.css')
block content
	.Mainbody(ng-controller='orderController')
		// gogle analysis
		script.
			(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
			(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
			m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
			})(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
			ga('create', 'UA-60904924-2', 'auto');
			ga('send', 'pageview');

		include ./MOBILE_templates/top.jade
		
		.body
			.order.subPage
				h2 點餐
				ul.DrinksUl
					li(ng-repeat="drink in aryDrinkProducts")
						.photo(ng-style="{'background-image':'url({{drink.picUri}})'}")
						h3 {{drink.name}}
						.controlDiv
							.symbol.left(ng-click="fnModifyCount(drink, 'minus')") &minus;
							input(ng-model="drink.number")
							.symbol.right(ng-click="fnModifyCount(drink, 'plus')") &plus;
				.btnGoPaying(ng-if="isReadyGoPay") 下一步：選擇付款方式 &rarr;
			.payment.subPage

			
		include ./MOBILE_templates/footer.jade